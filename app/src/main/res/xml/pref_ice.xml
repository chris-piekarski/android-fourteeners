<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_ice_name"
        android:inputType="textCapWords"
        android:key="ice_name_text"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_ice_name" />
    <EditTextPreference
        android:defaultValue="@string/pref_default_ice_email"
        android:inputType="textEmailAddress"
        android:key="ice_name_email"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_ice_email" />
    <EditTextPreference
        android:defaultValue="@string/pref_default_ice_number"
        android:inputType="phone"
        android:key="ice_name_number"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_ice_number" />

</PreferenceScreen>